<h2>Challenges In Progress:</h2><br>
<% @challenges.where(status: 'in_progress').each do |challenge|  %>
  <div>
    <p><%= challenge.title %></p>
    <p><%= challenge.challenge_end %></p>
    <% challenge.users.each do |user| %>
      <div>
        <% if user.id == params[:id].to_i %>
          <%= user.name.titleize %>
        <% else %>
          <%= link_to user.name.titleize, user_path(user) %>
        <% end %>

        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
    <% end %>
  </div>
<% end %>