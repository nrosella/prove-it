<div class="bs-component">
  <table class="table table-striped table-hover">
    <tbody>
        <% if Challenge.closed.size > 0 %>
          <h3> Recently Completed Challenges:</h3>
          <% Challenge.closed.limit(5).each do |challenge| %>
            <tr>
              <td>
                <h4 class="no-caps"><%= link_to challenge.title, challenge_path(challenge) %>
                </h4>
                <h4 class="no-caps">
                  <%= challenge.short_description %>
                </h4>
              </td>
              <% challenge.users.each.with_index do |user, idx| %>
                <% unless idx == 0 %>
                  <td style="text-align: center;">
                    <h3>VS</h3>
                  </td>
                <% end %>
                
                <% if challenge.tie? %>
                  <td style="text-align: center;">
                    <span>DRAW</span>
                    <figure>
                      <%= image_tag(user.avatar, size: '85') %>
                    <figcaption><%= link_to user.name.titleize, user_path(user) %></figcaption>
                  </figure>
                  </td>
                <% elsif challenge.winner == user %>
                  <td bgcolor="#db504a" style="text-align: center;">
                    <span>WINNER!</span>
                    <figure>
                      <%= image_tag(user.avatar, size: '85') %>
                    <figcaption><%= link_to user.name.titleize, user_path(user) %></figcaption>
                  </figure>
                  </td>
                <% else %>
                  <td style="text-align: center;">
                    <span>LOSER!</span>
                    <figure>
                      <%= image_tag(user.avatar, size: '85') %>
                    <figcaption><%= link_to user.name.titleize, user_path(user) %></figcaption>
                  </figure>
                  </td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>
</div>