<h2>Challenges Completed:</h2><br>
<% @challenges.closed.each do |challenge|  %>
  <div>
    <p><%= challenge.title %></p>
    <p><%= challenge.winner.name.titleize %></p>
    
    <p><%= challenge.challenge_end %></p>
    <% challenge.users.each do |user| %>
      <div>
        <% if user.id == params[:id].to_i %>
          <%= user.name.titleize %>
        <% else %>
          <%= link_to user.name.titleize, user_path(user) %>
        <% end %>

        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
    <% end %>
  </div>
<% end %>